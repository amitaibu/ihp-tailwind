@layer base {
    h1 {
      @apply text-3xl;
    }
    h2 {
      @apply text-2xl;
    }

    h3 {
        @apply text-xl;
    }
}



// Add you CSS or import other post-css files.
@layer components {
    .btn {
        @apply px-4 py-2 bg-blue-600 text-white rounded;
    }
}

